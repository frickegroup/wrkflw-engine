{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    ":disableRateLimiting",
    ":updateNotScheduled"
  ],
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 6am on Friday"
  ],
  "rebaseWhen": "auto",
  "configMigration": true,
  "dependencyDashboardTitle": ":package: Dependency Dashboard by `renovate[bot]` :robot:",
  "additionalReviewers": [
    "alexanderniebuhr"
  ],
  "platformCommit": true,
  "packageRules": [
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": true
    }
  ]
}